{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "child": {
      "anyOf": [
        { "$ref": "#/defs/element" },
        { "$ref": "#/defs/exported_object" },
        { "$ref": "#/defs/callable" },
        { "type": "number" },
        { "type": "string" },
        { "type": "boolean" },
        { "type": "null" },
        { "type": "object" },
        { "type": "any" }
      ]
    },
    "element": {
      "type": "object",
      "properties": {
        "__dhElemName": { "type": "string" },
        "props": {
          "type": "object",
          "properties": {
            "children": {
              "anyOf": [
                {
                  "type": "array",
                  "items": { "$ref": "#/defs/child" }
                },
                { "$ref": "#/defs/child" }
              ]
            }
          }
        }
      }
    },
    "callable": {
      "type": "object",
      "properties": {
        "__dhCbid": { "type": "string" }
      }
    },
    "exportedObject": {
      "type": "object",
      "properties": {
        "__dhObid": { "type": "number" }
      }
    },
    "uri": {
      "type": "object",
      "properties": {
        "__dhUri": { "type": "string" }
      }
    },
    "documentUpdatedParams": {
      "type": "array",
      "prefixItems": [{ "type": "string" }, { "type": "string" }],
      "items": false
    },
    "documentErrorParams": {
      "type": "array",
      "prefixItems": [{ "type": "string" }, { "type": "string" }],
      "items": false
    },
    "setStateParams": {
      "type": "array",
      "prefixItems": [{ "type": "object" }],
      "items": false
    },
    "callCallableParams": {
      "type": "array",
      "prefixItems": [{ "type": "string" }, { "type": "array" }],
      "items": false
    },
    "closeCallableParams": {
      "type": "array",
      "prefixItems": [{ "type": "string" }],
      "items": false
    }
  },
  "type": "object",
  "properties": {
    "jsonrpc": "2.0",
    "method": {
      "anyOf": [
        {
          "enum": [
            "documentUpdated",
            "documentError",
            "setState",
            "callCallable",
            "closeCallable"
          ]
        }
      ]
    },
    "allOf": [
      {
        "if": {
          "properties": {
            "method": { "const": "documentUpdated" }
          }
        },
        "then": {
          "properties": {
            "params": { "$ref": "#/defs/documentUpdatedParams" }
          }
        }
      },
      {
        "if": {
          "properties": {
            "method": { "const": "documentError" }
          }
        },
        "then": {
          "properties": {
            "params": { "$ref": "#/defs/documentErrorParams" }
          }
        }
      },
      {
        "if": {
          "properties": {
            "method": { "const": "setState" }
          }
        },
        "then": {
          "properties": {
            "params": { "$ref": "#/defs/setStateParams" }
          }
        }
      },
      {
        "if": {
          "properties": {
            "method": { "pattern": "callCallable" }
          }
        },
        "then": {
          "properties": {
            "params": { "$ref": "#/defs/callCallableParams" }
          }
        }
      },
      {
        "if": {
          "properties": {
            "method": { "pattern": "closeCallable" }
          }
        },
        "then": {
          "properties": {
            "params": { "$ref": "#/defs/closeCallableParams" }
          }
        }
      }
    ]
  }
}
